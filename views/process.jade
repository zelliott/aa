extend layout

block body
  body.process-bkg

  include ./includes/modals.jade

  .overlay
  .container
    include ./includes/header.jade

    .process.pure-g
      .pure-u-1-5
        .column-header
          a New Candidates
            b 3
      .pure-u-1-5
        .column-header
          a Phone Stage
            b 3
          .column-header-filter All
            span.oi(data-glyph='caret-bottom')
      .pure-u-1-5
        .column-header
          a Onsite Stage
            b 1
      .pure-u-1-5
        .column-header
          a Offer Made
            b 0
      .pure-u-1-5
        .column-header.search-header
          span.oi(data-glyph='magnifying-glass')
          input(type='text', value='Search for a candidate')

      //- Candidates
      .pure-u-1-5
        .column.candidates-column
          .card
            .card-contact
              .card-name Luke Dunphy
              .card-pos Advertising
            .additional-info
              span.oi(data-glyph='eye')
              div
                span.date-ago 1 week ago
                span.date-ago-review.open-modal(data='.review-modal') Review
          .card
            .card-contact
              .card-name Gloria Pritchett
              .card-pos Engineer
            .additional-info
              span.oi(data-glyph='eye')
              div
                span.date-ago 3 days ago
                span.date-ago-review.open-modal(data='.review-modal') Review
          .card
            .card-contact
              .card-name Gob Bluth
              .card-pos Management
            .additional-info
              span.oi(data-glyph='eye')
              div
                span.date-ago 2 days ago
                span.date-ago-review.open-modal(data='.review-modal') Review

          .add-card.open-modal(data='.add-modal')
            span.oi(data-glyph='plus')
            | Add a new candidate
      
      //- Phone
      .pure-u-1-5
        .column.phone-column
          .card
            .card-contact
              .card-name Don Draper
              .card-pos Engineer
            .upcoming-event
              span.oi(data-glyph='headphones')
              div
                span.date In 1 hour
                span.date-subtext Jan. 20th
          .card
            .card-contact
              .card-name Peggy Olson
              .card-pos Designer
            .upcoming-event
              span.oi(data-glyph='headphones')
              div
                span.date In 4 hours
                span.date-subtext Jan. 20th
          .card
            .card-contact
              .card-name Pete Campbell
              .card-pos Engineer
            .upcoming-event
              div
                span.schedule.open-modal(data='.schedule-modal') Schedule
          //-.card
            .card-contact
              .card-name Jimmy Hendricks
              .card-pos Engineer
            .upcoming-event
              span.oi(data-glyph='check')
              div
                span.date-ago 5 days ago
                span.date-ago-follow-up.open-modal(data='.follow-up-modal') Follow up
                
      //- Onsite
      .pure-u-1-5
        .column.onsite-column
          .card
            .card-contact
              .card-name Lindsay Bluth
              .card-pos Designer
            .upcoming-event
              span.oi(data-glyph='home')
              div
                span.date In 2 hours
                span.date-subtext Jan. 20th
                
      //- Offer
      .pure-u-1-5
        .column.onsite-column
            
      //- Search
      .pure-u-1-5
        .column.search-column
          | Search for any candidate in the recruiting system by name
