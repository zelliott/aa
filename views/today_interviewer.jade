extend layout

block body
  body.today-bkg
    
    include ./includes/modals.jade
    
    .container
      include ./includes/header.jade
      
      .today.pure-g
        .pure-u-4-5
          .content
            .content-header
              div.tab-on.tab-a
                | Interviews
                b 5
              div.tab-b Decisions
              div.header-action
                span.oi(data-glyph='magnifying-glass')
                input(type='text', placeholder='Search')
            .content-tasks.view-a
              .task
                .task-type
                  .task-icon
                    span.oi.oi-blue-circle(data-glyph='headphones')
                  .task-time
                    span.absolute 9:00 AM
                    span.relative In 5 min
                .task-arrow
                  span.oi(data-glyph='arrow-right')
                .task-body
                  .body-icon
                  .body-info
                    a.title(href='/candidate') Zack Elliott
                    span.info Engineer
                .task-action
                  button.btn-bkg.btn-blue.open-modal(data='.evaluate-modal') Start Interview
              .task
                .task-type
                  .task-icon
                    span.oi.oi-green-circle(data-glyph='home')
                  .task-time
                    span.absolute 10:00 AM
                    span.relative In 1 hr
                .task-arrow
                  span.oi(data-glyph='arrow-right')
                .task-body
                  .body-icon
                  .body-info
                    a.title(href='/candidate') Bob Francis
                    span.info Engineer
                .task-action
                  button.btn-bkg.btn-blue.open-modal(data='.evaluate-modal') Start Interview
            .content-tasks.view-b
              .task
                .task-body
                  .body-icon
                  .body-info
                    a.title(href='/candidate') Zack Elliott
                    span.info Engineer
                .task-eval
                  .eval
                    .eval-score 10
                  
                .task-action
                  button.btn-bkg.btn-blue.open-modal(data='.advance-modal') Make Offer
                  button.btn-flat.btn-delete.open-modal(data='.delete-modal')
                    span.oi(data-glyph='x')
                    | Remove
                .more-eval
                  span.oi(data-glyph='document')
                  | View evaluation
          
        .pure-u-1-5
          .right-info
            .right-block.today-block
              span.time 3:00 PM PST 
              span.date Monday, January 5th
            .right-block
              .block-title Today
              .flow
                .event
                  .date 9:00 AM
                  .title Phone Interview with John Smith
                .path
                .event
                  .date 11:00 AM
                  .title Phone Interview with Nick Cage
                .path
                .event
                  .date 3:00 PM
                  .title Onsite Interview with Jessica Martin
                .path
                .event.current-event
                  .date 4:30 PM
                  .title Onsite Interview with Bob Barley
